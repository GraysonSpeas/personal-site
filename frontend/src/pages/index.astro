import Wrapper from "../components/Wrapper.tsx";
import TranslateHide from "../components/translator/TranslateHide.tsx";

const showLoading = false; // Set to true if you want to show the loading spinner
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Grayson Speas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <!-- 
      Hydrate your one-and-only wrapper once.
      This mounts AuthProvider, kicks off fetchUser() on load, 
      and then renders MainContent (Header / Hero / FishingPage / etc.)
    -->
    <Wrapper client:load useLoading={showLoading}>
  <TranslateHide client:load />
    </Wrapper>

  </body>
</html>